<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background"
    android:elevation="18dp"
    android:orientation="horizontal"
    android:id="@+id/layout_custom_card">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/layout_custom_card_child">


    <Button
        android:id="@+id/iconLetter"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:text="@string/iconLetter"
        android:textSize="32dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@color/colorPrimary">
    </Button>

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginHorizontal="12dp"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/custom_buttom_1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginHorizontal="12dp"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/custom_buttom_1"
            app:layout_constraintStart_toEndOf="@+id/user_name" />

        <Button
            android:id="@+id/custom_buttom_1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:textSize="14dp"
            android:elevation="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</LinearLayout>